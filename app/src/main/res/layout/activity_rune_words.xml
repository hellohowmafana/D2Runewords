<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RuneWordsActivity"
    android:background="@color/black">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/finder"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="13dp"
        android:layout_centerInParent="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/search"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="输入要查询的文字"
                android:background="@color/white"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:src="@drawable/icon_filter"
                android:background="@color/transparent"
                android:onClick="FilterClick"/>
        </LinearLayout>
        <TextView
            android:id="@+id/filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="6dp"
            android:textSize="15sp"
            android:textColor="@color/palegold"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/finder"
        android:layout_above="@id/navigation"
        android:layout_marginBottom="13dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/res"
            android:gravity="center">

        </LinearLayout>
    </ScrollView>
    <com.example.d2runewords.Navigation
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:currentActivity="@string/runeword"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>