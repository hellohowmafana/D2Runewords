<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RuneWordsActivity"
    android:background="@color/black">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/finder"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="13dp"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/version"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/version"
                    android:background="@color/white"/>
                <Spinner
                    android:id="@+id/category"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/category"
                    android:background="@color/white"/>
                <Spinner
                    android:id="@+id/slot"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/slot"
                    android:background="@color/white"/>
                <Spinner
                    android:id="@+id/rune"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/rune"
                    android:background="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/search"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="输入要查询的文字"
                android:background="@color/white"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:onClick="OKClick"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/finder"
        android:layout_above="@id/toolbar"
        android:layout_marginBottom="13dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/res"
            android:gravity="center">

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/darkgray">
        <TextView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:onClick="RunesClick"
            android:text="符文"
            android:gravity="center"
            android:textColor="@color/lightgray"/>
        <TextView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:text="符文之语"
            android:gravity="center"
            android:textColor="@color/palegold"/>
    </LinearLayout>
</RelativeLayout>