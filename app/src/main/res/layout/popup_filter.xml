<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
       <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <com.aigestudio.wheelpicker.WheelPicker
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:wheel_data="@array/version"
                app:wheel_selected_item_text_color="@color/black"
                app:wheel_item_text_size="16sp"
                android:paddingHorizontal="3dp"/>
            <com.aigestudio.wheelpicker.WheelPicker
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:wheel_data="@array/category"
                app:wheel_selected_item_text_color="@color/black"
                app:wheel_item_text_size="16sp"
                android:paddingHorizontal="3dp"/>
            <com.aigestudio.wheelpicker.WheelPicker
                android:id="@+id/slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:wheel_data="@array/slot"
                app:wheel_selected_item_text_color="@color/black"
                app:wheel_item_text_size="16sp"
                android:paddingHorizontal="3dp"/>
            <com.aigestudio.wheelpicker.WheelPicker
                android:id="@+id/rune"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:wheel_data="@array/rune"
                app:wheel_selected_item_text_color="@color/black"
                app:wheel_item_text_size="16sp"
                android:paddingHorizontal="3dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_toLeftOf="@+id/confirm_button"
            android:background="@color/transparent"
            android:textColor="@color/lightgray"/>

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:text="确定"
            android:textColor="@color/red" />
    </RelativeLayout>
</LinearLayout>